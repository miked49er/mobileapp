<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ggc.mdeiters" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GGC Alma Mater</name>
    <description>
        App to assist GGC seniors to learn the Alma Mater song.
    </description>
    <author email="mdeiters@ggc.edu" href="http://www.deiters.me">
        Mike Deiters
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <exclude-files pattern="node_modules/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
