<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.deiters.hbuildingmaps.MainActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="209dp"
        android:layout_height="312dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/h_building_caption"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/health_sciences_building"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/campus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/campus"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/secondFloor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintVertical_bias="0.523"
        app:layout_constraintRight_toLeftOf="@+id/secondFloor"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/firstFloor"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/secondFloor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="90dp"
        android:text="@string/floor2"
        app:layout_constraintLeft_toRightOf="@+id/firstFloor"
        app:layout_constraintRight_toLeftOf="@+id/thirdFloor"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firstFloor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/floor1"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/secondFloor" />

    <Button
        android:id="@+id/thirdFloor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/floor3"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/secondFloor" />

    <Button
        android:id="@+id/about"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/secondFloor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintVertical_bias="0.523"
        app:layout_constraintLeft_toRightOf="@+id/secondFloor"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/thirdFloor"
        android:layout_marginRight="0dp" />

</android.support.constraint.ConstraintLayout>
